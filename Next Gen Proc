        // Calculation functions
        function calculateRoad() {
            let total = 0;
            for (let i = 0; i < entryCounters.road; i++) {
                const typeEl = document.getElementById(`road-type-${i}`);
                const loadEl = document.getElementById(`road-load-${i}`);
                const distanceEl = document.getElementById(`road-distance-${i}`);
                const resultEl = document.getElementById(`road-result-${i}`);

                if (typeEl && loadEl && distanceEl) {
                    const type = typeEl.value;
                    const load = parseFloat(loadEl.value) || 0;
                    const distance = parseFloat(distanceEl.value) || 0;
                    const factor = FACTORS.road[type].factor;
                    const emissions = load * distance * factor;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('roadTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function calculateAir() {
            let total = 0;
            for (let i = 0; i < entryCounters.air; i++) {
                const typeEl = document.getElementById(`air-type-${i}`);
                const weightEl = document.getElementById(`air-weight-${i}`);
                const distanceEl = document.getElementById(`air-distance-${i}`);
                const resultEl = document.getElementById(`air-result-${i}`);

                if (typeEl && weightEl && distanceEl) {
                    const type = typeEl.value;
                    const weight = parseFloat(weightEl.value) || 0;
                    const distance = parseFloat(distanceEl.value) || 0;
                    const factor = FACTORS.air[type].factor;
                    const rfi = FACTORS.air[type].rfi;
                    const emissions = weight * distance * factor * rfi;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('airTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function calculateSea() {
            let total = 0;
            for (let i = 0; i < entryCounters.sea; i++) {
                const typeEl = document.getElementById(`sea-type-${i}`);
                const weightEl = document.getElementById(`sea-weight-${i}`);
                const distanceEl = document.getElementById(`sea-distance-${i}`);
                const resultEl = document.getElementById(`sea-result-${i}`);

                if (typeEl && weightEl && distanceEl) {
                    const type = typeEl.value;
                    const weight = parseFloat(weightEl.value) || 0;
                    const distance = parseFloat(distanceEl.value) || 0;
                    const factor = FACTORS.sea[type].factor;
                    const emissions = weight * distance * factor;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('seaTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function calculateRail() {
            let total = 0;
            for (let i = 0; i < entryCounters.rail; i++) {
                const typeEl = document.getElementById(`rail-type-${i}`);
                const weightEl = document.getElementById(`rail-weight-${i}`);
                const distanceEl = document.getElementById(`rail-distance-${i}`);
                const resultEl = document.getElementById(`rail-result-${i}`);

                if (typeEl && weightEl && distanceEl) {
                    const type = typeEl.value;
                    const weight = parseFloat(weightEl.value) || 0;
                    const distance = parseFloat(distanceEl.value) || 0;
                    const factor = FACTORS.rail[type].factor;
                    const emissions = weight * distance * factor;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('railTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function calculateWarehouse() {
            let total = 0;
            for (let i = 0; i < entryCounters.warehouse; i++) {
                const typeEl = document.getElementById(`warehouse-type-${i}`);
                const areaEl = document.getElementById(`warehouse-area-${i}`);
                const gridEl = document.getElementById(`warehouse-grid-${i}`);
                const resultEl = document.getElementById(`warehouse-result-${i}`);

                if (typeEl && areaEl && gridEl) {
                    const type = typeEl.value;
                    const area = parseFloat(areaEl.value) || 0;
                    const grid = parseFloat(gridEl.value) || 0;
                    const intensity = FACTORS.warehouse[type].intensity;
                    const emissions = area * intensity * grid;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('warehouseTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function calculateLastMile() {
            let total = 0;
            for (let i = 0; i < entryCounters.lastmile; i++) {
                const typeEl = document.getElementById(`lastmile-type-${i}`);
                const parcelsEl = document.getElementById(`lastmile-parcels-${i}`);
                const distanceEl = document.getElementById(`lastmile-distance-${i}`);
                const resultEl = document.getElementById(`lastmile-result-${i}`);

                if (typeEl && parcelsEl && distanceEl) {
                    const type = typeEl.value;
                    const parcels = parseFloat(parcelsEl.value) || 0;
                    const distance = parseFloat(distanceEl.value) || 0;
                    const factor = FACTORS.lastmile[type].factor;
                    const emissions = parcels * factor;
                    
                    total += emissions;
                    if (resultEl) {
                        resultEl.value = `${emissions.toFixed(2)} kg CO‚ÇÇe`;
                    }
                }
            }
            document.getElementById('lastmileTotal').textContent = total.toFixed(2);
            updateSummary();
        }

        function updateSummary() {
            const road = parseFloat(document.getElementById('roadTotal').textContent) || 0;
            const air = parseFloat(document.getElementById('airTotal').textContent) || 0;
            const sea = parseFloat(document.getElementById('seaTotal').textContent) || 0;
            const rail = parseFloat(document.getElementById('railTotal').textContent) || 0;
            const warehouse = parseFloat(document.getElementById('warehouseTotal').textContent) || 0;
            const lastmile = parseFloat(document.getElementById('lastmileTotal').textContent) || 0;

            const total = road + air + sea + rail + warehouse + lastmile;
            const tonnes = total / 1000;
            const trees = Math.round(total / 21);
            const carKm = Math.round(total / 0.171);

            document.getElementById('totalEmissions').textContent = total.toFixed(0);
            document.getElementById('totalTonnes').textContent = tonnes.toFixed(2);
            document.getElementById('treesNeeded').textContent = trees.toLocaleString();
            document.getElementById('carKm').textContent = carKm.toLocaleString();

            // Update equivalents in dashboard
            document.getElementById('eq-trees').textContent = trees.toLocaleString();
            document.getElementById('eq-car').textContent = carKm.toLocaleString();
            document.getElementById('eq-home').textContent = (total / 7000).toFixed(2);
            document.getElementById('eq-flight').textContent = (total / 1000).toFixed(2); // Assuming 1 tonne CO2 per transatlantic flight
        }

        function removeEntry(section, id) {
            const entry = document.getElementById(`${section}-entry-${id}`);
            if (entry) {
                entry.remove();
                switch(section) {
                    case 'road': calculateRoad(); break;
                    case 'air': calculateAir(); break;
                    case 'sea': calculateSea(); break;
                    case 'rail': calculateRail(); break;
                    case 'warehouse': calculateWarehouse(); break;
                    case 'lastmile': calculateLastMile(); break;
                }
            }
        }

        function clearSection(section) {
            document.getElementById(`${section}Entries`).innerHTML = '';
            entryCounters[section] = 0;
            document.getElementById(`${section}Total`).textContent = '0.00';
            updateSummary();
        }

        function updateChart() {
            const ctx = document.getElementById('emissionsChart').getContext('2d');
            
            const road = parseFloat(document.getElementById('roadTotal').textContent) || 0;
            const air = parseFloat(document.getElementById('airTotal').textContent) || 0;
            const sea = parseFloat(document.getElementById('seaTotal').textContent) || 0;
            const rail = parseFloat(document.getElementById('railTotal').textContent) || 0;
            const warehouse = parseFloat(document.getElementById('warehouseTotal').textContent) || 0;
            const lastmile = parseFloat(document.getElementById('lastmileTotal').textContent) || 0;

            if (chart) {
                chart.destroy();
            }

            chart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Road Transport', 'Air Freight', 'Sea Freight', 'Rail', 'Warehousing', 'Last Mile'],
                    datasets: [{
                        data: [road, air, sea, rail, warehouse, lastmile],
                        backgroundColor: [
                            '#178582',
                            '#FF6B35',
                            '#2DD881',
                            '#F7B801',
                            '#4A90E2',
                            '#9B59B6'
                        ],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 13,
                                    family: 'Archivo'
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return `${label}: ${value.toFixed(2)} kg CO‚ÇÇe (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        function downloadReport() {
            const road = parseFloat(document.getElementById('roadTotal').textContent) || 0;
            const air = parseFloat(document.getElementById('airTotal').textContent) || 0;
            const sea = parseFloat(document.getElementById('seaTotal').textContent) || 0;
            const rail = parseFloat(document.getElementById('railTotal').textContent) || 0;
            const warehouse = parseFloat(document.getElementById('warehouseTotal').textContent) || 0;
            const lastmile = parseFloat(document.getElementById('lastmileTotal').textContent) || 0;
            const total = road + air + sea + rail + warehouse + lastmile;

            let csv = 'Logistics Carbon Emissions Report\n\n';
            csv += 'Category,Emissions (kg CO2e),Percentage\n';
            csv += `Road Transport,${road.toFixed(2)},${((road/total)*100).toFixed(1)}%\n`;
            csv += `Air Freight,${air.toFixed(2)},${((air/total)*100).toFixed(1)}%\n`;
            csv += `Sea Freight,${sea.toFixed(2)},${((sea/total)*100).toFixed(1)}%\n`;
            csv += `Rail Transport,${rail.toFixed(2)},${((rail/total)*100).toFixed(1)}%\n`;
            csv += `Warehousing,${warehouse.toFixed(2)},${((warehouse/total)*100).toFixed(1)}%\n`;
            csv += `Last Mile,${lastmile.toFixed(2)},${((lastmile/total)*100).toFixed(1)}%\n`;
            csv += `\nTotal,${total.toFixed(2)},100%\n`;
            csv += `\nTotal (tonnes CO2e),${(total/1000).toFixed(2)}\n`;
            csv += `\nEquivalents:\n`;
            csv += `Trees needed for offset (1 year),${Math.round(total/21)}\n`;
            csv += `Car kilometers,${Math.round(total/0.171)}\n`;
            csv += `Household years,${(total/7000).toFixed(2)}\n`;

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `logistics-carbon-report-${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
            window.URL.revokeObjectURL(url);
        }

        // Initialize with one entry for each section
        window.onload = function() {
            addRoadEntry();
            addAirEntry();
            addSeaEntry();
            addRailEntry();
            addWarehouseEntry();
            addLastMileEntry();
        };
    </script>
</body>
</html>
