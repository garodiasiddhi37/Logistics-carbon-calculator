        // Tab switching
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tab).classList.add('active');

            if (tab === 'dashboard') {
                updateChart();
            }
        }

        // Add entry functions
        function addRoadEntry() {
            const id = entryCounters.road++;
            const html = `
                <div class="entry-row" id="road-entry-${id}">
                    <div class="input-grid">
                        <div class="input-group">
                            <label>Vehicle Type</label>
                            <select id="road-type-${id}" onchange="calculateRoad()">
                                ${Object.keys(FACTORS.road).map(key => 
                                    `<option value="${key}">${FACTORS.road[key].name}</option>`
                                ).join('')}
                            </select>
                        </div>
                        <div class="input-group">
                            <label>Load (tonnes)</label>
                            <input type="number" id="road-load-${id}" value="10" min="0" step="0.1" onchange="calculateRoad()">
                        </div>
                        <div class="input-group">
                            <label>Distance (km)</label>
                            <input type="number" id="road-distance-${id}" value="100" min="0" step="1" onchange="calculateRoad()">
                        </div>
                        <div class="input-group">
                            <label>Emissions</label>
                            <input type="text" id="road-result-${id}" value="0.00 kg CO‚ÇÇe" readonly style="background: #e8f5e9; font-weight: 600;">
                        </div>
                    </div>
                    <button class="remove-btn" onclick="removeEntry('road', ${id})">Remove Entry</button>
                </div>
            `;
            document.getElementById('roadEntries').insertAdjacentHTML('beforeend', html);
            calculateRoad();
        }

